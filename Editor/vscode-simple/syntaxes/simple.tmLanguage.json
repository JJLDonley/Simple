{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Simple",
  "scopeName": "source.simple",
  "patterns": [
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#declarations" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#symbols" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.simple",
          "match": "//.*$"
        },
        {
          "name": "comment.block.simple",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "name": "meta.import.simple",
          "match": "\\b(import)\\s+([A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)*)(?:\\s+(as)\\s+([A-Za-z_][A-Za-z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.declaration.simple" },
            "2": { "name": "support.module.import.simple" },
            "3": { "name": "keyword.declaration.simple" },
            "4": { "name": "variable.other.import-alias.simple" }
          }
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.declaration.aggregate.simple",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(::)\\s*(artifact|enum|module)\\b",
          "captures": {
            "1": { "name": "entity.name.type.simple" },
            "2": { "name": "keyword.operator.simple" },
            "3": { "name": "keyword.declaration.simple" }
          }
        },
        {
          "name": "meta.declaration.function.simple",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(:)\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*(\\()",
          "captures": {
            "1": { "name": "entity.name.function.simple" },
            "2": { "name": "punctuation.separator.type.simple" },
            "3": { "name": "storage.type.simple" },
            "4": { "name": "punctuation.section.group.begin.simple" }
          }
        },
        {
          "name": "meta.declaration.variable.simple",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(:)\\s*([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "variable.other.definition.simple" },
            "2": { "name": "punctuation.separator.type.simple" },
            "3": { "name": "storage.type.simple" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.simple",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.simple",
              "match": "\\\\(x[0-9A-Fa-f]{2}|[nrt\\\"'])"
            }
          ]
        },
        {
          "name": "string.quoted.single.simple",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.simple",
              "match": "\\\\(x[0-9A-Fa-f]{2}|[nrt\\\"'])"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.simple",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.simple",
          "match": "\\b(?:if|else|while|for|break|skip|return|default)\\b"
        },
        {
          "name": "keyword.declaration.simple",
          "match": "\\b(?:fn|callback|import|extern|module|artifact|enum|as)\\b"
        },
        {
          "name": "constant.language.simple",
          "match": "\\b(?:true|false|self)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.simple",
          "match": "\\b(?:void|bool|char|string|i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|f32|f64)\\b"
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "entity.name.function.call.simple",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.simple",
          "match": "::|==|!=|<=|>=|&&|\\|\\||<<|>>|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|\\+\\+|--|[+\\-*/%&|^!<>=:@]"
        }
      ]
    }
  }
}
