{
  "name": "simple-vscode",
  "displayName": "Simple Language",
  "description": "VS Code support for the Simple language (LSP + syntax highlighting)",
  "version": "0.3.0",
  "publisher": "jjldonley",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JJLDonley/Simple.git",
    "directory": "Editor/vscode-simple"
  },
  "homepage": "https://github.com/JJLDonley/Simple/tree/main/Editor/vscode-simple",
  "bugs": {
    "url": "https://github.com/JJLDonley/Simple/issues"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "simple",
        "aliases": [
          "Simple",
          "simple"
        ],
        "extensions": [
          ".simple"
        ],
        "semanticHighlighting": true,
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "simple",
        "scopeName": "source.simple",
        "path": "./syntaxes/simple.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "simple.restartLanguageServer",
        "title": "Simple: Restart Language Server",
        "category": "Simple",
        "icon": "$(debug-restart)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "simple.restartLanguageServer"
        }
      ],
      "editor/title": [
        {
          "command": "simple.restartLanguageServer",
          "when": "editorLangId == simple",
          "group": "navigation@90"
        }
      ]
    },
    "configuration": {
      "title": "Simple",
      "properties": {
        "simple.lspPath": {
          "type": "string",
          "default": "simple",
          "description": "Path to the Simple CLI executable used to launch the LSP server."
        },
        "simple.lspArgs": {
          "type": "array",
          "default": [
            "lsp"
          ],
          "items": {
            "type": "string"
          },
          "description": "Arguments passed to the Simple LSP command."
        }
      }
    }
  },
  "scripts": {
    "lint": "echo 'No lint configured'"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
